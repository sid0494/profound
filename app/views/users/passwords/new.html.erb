<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

<div class="body"></div>
<div class="grad"></div>
	<div class="header">
		<div><h1><b>PRO<span>found</span></b></h1></div><br><br><br>
		<font face="exo" size="3">
			<center> Seek <br /> Endeavour <br /> Discover </center>
			<center>-------</center>
			<center>
				Bridge the gap,<br />Broaden the Vision,<br />Proliferate the Skills
			</center>
		</font>
	</div>
	<br>
	<div class="alert-box">
		
		<% if notice %>
		  <center><p class="alert alert-success"><%= notice %></p></center>
		<% end %>
		
		<% if alert %>
		  <center><p class="alert alert-danger"><%= alert %></p></center>
		<% end %>
	
	</div>

  <div class="login">
  	<h3><font color="black">Forgot your password?</font></h3>
    <%= f.email_field :email, type: 'text', placeholder: 'Email', name: 'email' %>
    <div class="actions">
	    <%= f.submit "Send reset password instructions" %>
	</div>
	<div class="signintext">
		<%= render "users/shared/links" %>
	</div>
  </div>
<% end %>
