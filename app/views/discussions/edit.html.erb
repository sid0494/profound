<%= form_for(@discussion, url: {:action => 'update', :id => @discussion.id}) do |f| %>

<section class="content-header">
  <h1>
    <font face="verdana">
      <b><i class='fa fa-fw fa-briefcase'></i> Edit Discussion Topic</b>
    </font>
  </h1>
</section>

<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-md-12">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header">
          <h3 class="box-title">Discussion Thread</h3>
        </div><!-- /.box-header -->
        <!-- form start -->
        <form role="form">
          <div class="box-body">
            <div class="form-group">
              <label for="exampleInputEmail1"><font size="3">Discussion Topic/Question</font></label>
              <%= f.text_field :topic_name, autofocus: true, class: 'form-control', placeholder: 'Enter your Question', :required => true %>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1"><font size="3">Description</font></label>
              <%= f.text_area :description, autofocus: true, class: 'form-control', placeholder: 'Enter the Description here', rows: '4', :required => true %>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1"><font size="3">Tags</font></label>
              <%= select_tag "tags", options_for_select(Tag.all.collect{ |t| t.tag_name }), multiple: true, class: "form-control", :width => "100px" %>
            </div>
	        <br>
	        <p class="help-block">All the users could see this question and the users having these skills could see it in their newsfeed too.</p>
            </div>

          </div><!-- /.box-body -->

          <div class="box-footer actions">
            <%= f.submit "Update Discussion", class: 'btn btn-success' %>
          </div>
        </form>
      </div><!-- /.box -->
    </div>
</section>


<% end %>