<div class="row">
<div class="col-xs-12">
  <% if current_user.id == discussion_reply.user.id %>
  <% 	badge_up = "btn btn-success btn-xs disabled" %>
  <% 	badge_down = "btn btn-danger btn-xs disabled" %>
  <% else %>
  <% 	badge_up = "btn btn-success btn-xs" %>
  <% 	badge_down = "btn btn-danger btn-xs" %>
  <% end %>
  <p><b><%= discussion_reply.user.first_name + " " + discussion_reply.user.last_name %></b></p>
  <p><%= discussion_reply.reply %></p>
  <p><%= link_to("Upvote (#{discussion_reply.upvotes})", "#", :class => "#{badge_up}") %>  <%= link_to("Downvote (#{discussion_reply.downvotes})", "#", :class => "#{badge_down}") %>
  <small class="pull-right"><i class="fa fa-clock-o"></i> <%= time_ago_in_words(discussion_reply.created_at) + " ago" %></small></p>
  </p>
</div>  
</div>
<hr>