<%= form_for(@user, url: '#') do |f| %>

<section class="content-header">
  <h1>
    <font face="verdana" size="6px">
      <b>
      	<i class='fa fa-fw fa-user'></i><%= @user.first_name+" "+@user.last_name %>
      	<small>
      		<%= " ("+@user.username+") " %>
      	</small>
      	<span class="label label-warning"><i class="fa fa-star"></i> <%= @rp %></span>

      	<!-- show followers here. -->
      	<span class="label label-success"><i class='fa fa-fw fa-users'></i><%= current_user.followers.count %></span>
      </b>
      <% if @user == current_user %>
	    	<%= link_to "Edit Profile", edit_user_registration_path, :class => "btn btn-primary pull-right" %>
	    <% elsif current_user.followings.include?(@user)%>
	    	<%= link_to "<i class='fa fa-minus'></i> Unfollow".html_safe, {:controller => 'dashboard', :action => 'unfollow', :id => @user.id}, :class => "btn btn-info pull-right" %>
	    <% else %>
	    	<%= link_to "<i class='fa fa-plus'></i> Follow".html_safe, {:controller => 'dashboard', :action => 'follow', :id => @user.id}, :class => "btn btn-info pull-right" %>
	    <% end %>
      <br>
    </font>
  </h1>

  <% if @user != current_user %>
    <h1>
      <div class="pull-right">
        <font face="verdana" size="6px">
          <!-- Modal button -->
          <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal"><i class="fa fa-fw fa-envelope"></i> Message this User</button>
        </font>
      </div>
    </h1>
  <% end %>
</section>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <section class="content-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel"><b><i class="fa fa-fw fa-envelope"></i> Send a Message</b></h4>
        </section>
      </div>
      <div class="modal-body">
        <form role="form">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Message To (Enter the username here)" autofocus="true" value="<%= current_user.username %>" disabled="true" /><br>
            <textarea rows="4" class="form-control" placeholder="Type the Message here" autofocus="true" /></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-success">Send <i class="fa fa-fw fa-mail-forward"></i></button>
      </div>
    </div>
  </div>
</div>

<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-md-8">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header">
          <h3><b>Personal Details</h3></b>
        </div><!-- /.box-header -->
        <!-- form start -->
        <form role="form">
          <div class="box-body">
          	<div class="form-group"><h4>
          		<%= f.label :email %>
          		<%= ": "+@user.email %>
	          	<br><br>
          		<%= f.label :address %>
          		<% if !@user.address.nil? %>
          			<%= ": "+@user.address %>
          		<% else %>
          			<%= " : N.A." %>
          		<% end %>
	          	<br><br>
          		<%= f.label :city %>
          		<% if !@user.city.nil? %>
          			<%= ": "+@user.city %>
          		<% else %>
          			<%= " : N.A." %>
          		<% end %>
	          	<br><br>
          		<%= f.label :state %>
          		<% if !@user.state.nil? %>
          			<%= ": "+@user.state %>
          		<% else %>
          			<%= " : N.A." %>
          		<% end %>
	          	<br><br>
          		<%= f.label :country %>
          		<% if !@user.country.nil? %>
          			<%= ": "+@user.country %>
          		<% else %>
          			<%= " : N.A." %>
          		<% end %>
	          	<br><br>
          		<%= f.label :contact_number %>
          		<% if !@user.contact.nil? %>
          			<%= ": "+@user.contact %>
          		<% else %>
          			<%= " : N.A." %>
          		<% end %>
	          </h4>
          	</div>
          	<div class="form-group">
          	</div>
          </div>
      	</form>
      </div>
    </div>

    <div class="col-md-8">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header">
          <h3><b>Educational Details</b></h3>
        </div><!-- /.box-header -->
        <!-- form start -->
        <form role="form">
          <div class="box-body">
          	<div class="form-group"><h4>
	          		<%= f.label :profession %>
	          		<% if !@user.profession.nil? %>
	          			<%= ": "+@user.profession %>
	          		<% else %>
	          			<%= " : N.A." %>
	          		<% end %>
	          	<br><br>
		          	<%= f.label :degree %>
		          		<% if !@user.degree.nil? %>
		          			<%= ": "+@user.degree %>
		          		<% else %>
		          			<%= " : N.A." %>
		          		<% end %>
	          	<br><br>
	          		<%= f.label :institute %>
	          		<% if !@user.institute.nil? %>
	          			<%= ": "+@user.institute %>
	          		<% else %>
	          			<%= " : N.A." %>
	          		<% end %>
	          	<br><br>
		          	<%= f.label :areas_Of_Interest %>
	          		<%= ": " %>
		          	<% @user.interest_areas.each do |tag| %>
				      	<a class="btn btn-primary btn-xs disabled"><%= tag.tag_name %></a>
			    		<% end %>
		    	<br><br>
				    <%= f.label :areas_Of_Expertise %>
				    <%= ": " %>
				    <% @user.expertise_areas.each do |tag| %>
				    <a class="btn btn-primary btn-xs disabled"> <%= tag.tag_name %></a>
				    <% end %>
				<br><br>
					<%= f.label :Resume %>
				    <%= ": " %>
				    <%= button_to "Download Resume/CV", '#', :class => 'btn btn-xs btn-success' %>
		    	<br><br><br><br>
		          	<% if @user != current_user %>
			          	<%= button_to "Contact the Person", '#', :class => 'btn btn-primary pull-left' %>
			          	<%= button_to "Report", '#', :class => 'btn btn-danger pull-right' %>
			    	<% else %>
				    	<%= button_to "Verify Account", '#', :class => 'btn btn-success pull-left' %>
		          		<%= button_to "Upload Resume/CV", '#', :class => 'btn btn-success pull-right' %>
			    	<% end %>
	          	<br>
	          </h4>
          	</div>
          </div>
      	</form>
      </div>
    </div>
  </div>
</section>

<% end %>