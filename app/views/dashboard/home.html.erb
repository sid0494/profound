
<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    <%= current_user.first_name %>
    <small>Dashboard</small>
  </h1>
</section>

<!-- Main content -->
<section class="content">
  <!-- Small boxes (Stat box) -->
  <div class="row">
    <div class="col-lg-3 col-xs-6">
      <!-- small box -->
      <div class="small-box bg-yellow">
        <div class="inner">
          <h3>150</h3>
          <p>Messages</p>
        </div>
        <div class="icon">
          <i class="ion-email-unread"></i>
        </div>
      </div>
    </div><!-- ./col -->
    <div class="col-lg-3 col-xs-6">
      <!-- small box -->
      <div class="small-box bg-aqua">
        <div class="inner">
          <h3><%= @rp %></h3>
          <p>Reputation Points</p>
        </div>
        <div class="icon">
          <i class="ion-android-star-outline"></i>
        </div>
      </div>
    </div><!-- ./col -->
    <div class="col-lg-3 col-xs-6">
      <!-- small box -->
      <div class="small-box bg-green">
        <div class="inner">
          <h3>44</h3>
          <p>Followers</p>
        </div>
        <div class="icon">
          <i class="ion-ios-people"></i>
        </div>
      </div>
    </div><!-- ./col -->
    <div class="col-lg-3 col-xs-6">
      <!-- small box -->
      <div class="small-box bg-red">
        <div class="inner">
          <h3>65</h3>
          <p>Following</p>
        </div>
        <div class="icon">
          <i class="ion-ios-people"></i>
        </div>
      </div>
    </div><!-- ./col -->
  </div><!-- /.row -->
  <!-- Main row -->
    <div class="row">
            <div class="col-xs-12">
              <div class="box">
                <div class="box-header">
                  <h3 class="box-title">My Projects</h3>
                  <div class="box-tools">
                    <div class="input-group">
                      <input type="text" name="table_project_search" class="form-control input-sm pull-right" style="width: 150px;" placeholder="Search"/>
                      <div class="input-group-btn">
                        <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                      </div>
                    </div>
                  </div>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                  <table class="table table-hover">
                    <% if not @my_projects.empty? %>
                        <tr>
                          <th>Project Name</th>
                          <th>Status</th>
                          <th>Created At</th>
                          <th>Project Description</th>
                        </tr>
                        <% @my_projects.each do |project| %>
                            <% if project.project_status == "completed"%>
                            <%      badge = "label label-success" %>
                            <% elseif project.project_status == "ongoing"%>
                            <%      badge = "label label-primary" %>
                            <% else %>
                            <%      badge = "label label-danger" %>
                            <% end %>
                            <tr>
                              <td><%= project.project_name %></td>
                              <td><span class='<%= badge %>'><%= project.project_status %></span></td>
                              <td><%= time_ago_in_words(project.created_at) %></td>
                              <td><%= project.project_description %></td>
                            </tr>
                        <% end %>
                    <% else %>
                    <tr>
                    <p><center><b>You have not created any projects yet !!</b></center></p>
                    </tr>
                    <% end %>
                  </table>
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div>
          </div>
  
    <div class="row">
            <div class="col-xs-12">
              <div class="box">
                <div class="box-header">
                  <h3 class="box-title">My Discussions</h3>
                  <div class="box-tools">
                    <div class="input-group">
                      <input type="text" name="table_discussion_search" class="form-control input-sm pull-right" style="width: 150px;" placeholder="Search"/>
                      <div class="input-group-btn">
                        <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                      </div>
                    </div>
                  </div>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                  <table class="table table-hover">
                    <% if not @my_discussions.empty? %>
                        <tr>
                          <th>Discussion Topic</th>
                          <th>Created At</th>
                          <th>Description</th>
                        </tr>
                        <% @my_discussions.each do |discussion| %>
                            <tr>
                              <td><%= discussion.topic_name %></td>
                              <td><%= time_ago_in_words(discussion.created_at) %></td>
                              <td><%= discussion.description %></td>
                            </tr>
                        <% end %>
                    <% else %>
                    <tr>
                    <p><center><b>You have not created any discussion threads yet !!</b></center></p>
                    </tr>
                    <% end %>
                  </table>
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div>
          </div>
    <!-- Left col -->
    <section>

    </section><!-- /.Left col -->
    <!-- right col (We are only adding the ID to make the widgets sortable)-->
  </div><!-- /.row (main row) -->

</section><!-- /.content -->
