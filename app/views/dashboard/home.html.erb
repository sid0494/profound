<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-tasks fa-fw"></i> My Projects
                <div class="pull-right">
                <%= button_to "Post a new Project", projects_new_path , :class => "btn btn-xs btn-success pull-right", :method => "get" %>   
                </div>
            </h3>
            </div>
            <div class="panel-body">
            	<font color="black">
                	<table class="table table-hover">
                		
                            <% if not @my_projects.empty? %>
                            <tbody>
                            <thead>
                            <tr>
                                <th>Project Name</th>
                                <th>Posted At</th>
                                <th>Description</th>
                            </tr>
                            </thead>
                            <% @my_projects.each do |project| %>
                			<tr>
                				<td><%= project.project_name %></td>
                				<td><%= time_ago_in_words(project.created_at) %></td>
                				<td><%= project.project_description %></td>
                			</tr>
                            <% end %>
                            </tbody>
                            <% else %>
                            <center><b>You have not created any projects yet !</b></center>
                            <% end %>
                	</table>
                </font>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-comments fa-fw"></i> My Discussion Topics
                	<div class="pull-right">
                		<%= button_to "Start a discussion", discussions_new_path , :class => "btn btn-xs btn-success pull-right", :method => "get" %>
                	</div>
                </h3>
            </div>
            <div class="panel-body">
            	<font color="black">
                	<table class="table table-hover">
                        <% if not @my_topics.empty? %>
                		<thead>
                			<tr>
                				<th>Question</th>
                				<th>Posted At</th>
                			</tr>
                		</thead>
                		<tbody>
                            <% @my_topics.each do |topic| %>
                			<tr>
                				<td><%= topic.topic_name %></td>
                				<td><%= topic.created_at %></td>
                			</tr>
                            <% end %>
                		</tbody>
                        <% else %>
                        <center><b>You have not created any discussion topics yet !</b></center>
                        <% end %>
                	</table>
                </font>
            </div>
        </div>
    </div>
</div>

