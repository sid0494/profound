<%= form_for(@project, url: {:action => 'update', :id => @project.id}) do |f| %>

<section class="content-header">
  <h1>
    <b><i class='fa fa-fw fa-graduation-cap'></i> Edit Project</b>
  </h1>
</section>

<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-md-8">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header">
          <h3 class="box-title">Project Details</h3>
        </div><!-- /.box-header -->
        <!-- form start -->
        <form role="form">
          <div class="box-body">
            <div class="form-group">
              <label for="exampleInputEmail1"><font size="3">Project Title</font></label>
              <%= f.text_field :project_name, autofocus: true, class: 'form-control', placeholder: 'Enter the Project name here', :required => true %>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1"><font size="3">Project Description</font></label>
              <%= f.text_area :project_description, autofocus: true, class: 'form-control', placeholder: 'Enter the project Description here', rows: '4', :required => true %>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1"><font size="3">Tags</font></label>
              <%= select_tag "tags", options_for_select(Tag.all.collect{ |t| t.tag_name }), multiple: true, class: "form-control", :width => "100px" %>
            </div>
            <div class="form-group">
              <form action="">
                <label><font size="3">Project Status</font></label><br>
                <%= f.radio_button :project_status, "yet to start" %>
                <%= f.label :yet_to_start %><br>
                <%= f.radio_button :project_status, "ongoing" %>
                <%= f.label :ongoing %><br>
                <%= f.radio_button :project_status, "completed" %>
                <%= f.label :completed %><br>
              </form>
              <br>
              <p class="help-block">All the users could see this project and the users having the skills could see it in their newsfeed too.</p>
            </div>

          </div><!-- /.box-body -->

          <div class="box-footer actions">
            <%= f.submit "Edit Project", class: 'btn btn-success' %>
          </div>
        </form>
      </div><!-- /.box -->
    </div>
</section>

<% end %>